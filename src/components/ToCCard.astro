---
import type { TocItem } from "../types/TableOfContentTypes";

const { item, collection } = Astro.props;


const hrefData = item.topicHref
  ? `${item.topicHref?.slice(0, -3)}`
  : item.href?.slice(0, -3);
---

<li>
  <a href={hrefData}>{item.name}</a>
  {
    item.items && (
      <ul class="pl-6 list-disc">
        {item.items.map((item: TocItem) => (
          <Astro.self item={item} />
        ))}
      </ul>
    )
  }
</li>
